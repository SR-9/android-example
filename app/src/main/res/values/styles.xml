<resources>

    <!--
    Follow this common theme
    https://medium.com/androiddevelopers/android-styling-common-theme-attributes-8f7c50c9eaba
    -->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">

        <!-- Common color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorError">@android:color/holo_red_dark</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="android:colorBackground">@color/colorSurface</item>

        <!-- Common radius -->
        <item name="radiusSmall">@dimen/radiusSmall</item>
        <item name="radiusMedium">@dimen/radiusMedium</item>
        <item name="radiusLarge">@dimen/radiusLarge</item>
        <item name="radius">?attr/radiusMedium</item>

        <!-- Todo some other common -->
        <item name="materialButtonStyle">@style/AppTheme.RaiseButton</item>
        <item name="materialButtonOutlinedStyle">@style/AppTheme.OutlineButton</item>
        <item name="borderlessButtonStyle">@style/AppTheme.FlatButton</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppTheme.RaiseButton" parent="@style/Widget.MaterialComponents.Button"><!-- defStyleAttr: Int = R.attr.materialButtonStyle -->
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="AppTheme.OutlineButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton"><!-- defStyleAttr: Int = R.attr.materialButtonOutlinedStyle -->
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="AppTheme.FlatButton" parent="@style/Widget.MaterialComponents.Button.TextButton"><!-- defStyleAttr: Int = R.attr.borderlessButtonStyle -->
        <item name="cornerRadius">20dp</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

</resources>